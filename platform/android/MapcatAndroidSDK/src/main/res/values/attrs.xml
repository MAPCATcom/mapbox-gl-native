<resources>
    <!-- these are public -->
    <declare-styleable name="mapcat_MapView">

        <!--Configuration-->
        <attr name="mapcat_styleUrl" format="string"/>
        <attr name="mapcat_apiBaseUrl" format="string"/>
        <attr name="mapcat_localIdeographFontFamily" format="string"/>

        <!--Camera-->
        <attr name="mapcat_cameraTargetLat" format="float"/>
        <attr name="mapcat_cameraTargetLng" format="float"/>
        <attr name="mapcat_cameraZoom" format="float"/>
        <attr name="mapcat_cameraBearing" format="float"/>
        <attr name="mapcat_cameraTilt" format="float"/>

        <!--Zoom-->
        <attr name="mapcat_cameraZoomMax" format="float"/>
        <attr name="mapcat_cameraZoomMin" format="float"/>

        <!--Gestures-->
        <attr name="mapcat_uiZoomGestures" format="boolean"/>
        <attr name="mapcat_uiScrollGestures" format="boolean"/>
        <attr name="mapcat_uiRotateGestures" format="boolean"/>
        <attr name="mapcat_uiTiltGestures" format="boolean"/>
        <attr name="mapcat_uiDoubleTapGestures" format="boolean"/>

        <!--UI-Controls-->
        <attr name="mapcat_uiZoomControls" format="boolean"/>

        <!--MyLocation-->
        <attr name="mapcat_myLocation" format="boolean"/>
        <attr name="mapcat_myLocationTintColor" format="color"/>
        <attr name="mapcat_myLocationDrawable" format="reference"/>
        <attr name="mapcat_myLocationBearingDrawable" format="reference"/>
        <attr name="mapcat_myLocationBackgroundDrawable" format="reference"/>
        <attr name="mapcat_myLocationBackgroundTintColor" format="color"/>
        <attr name="mapcat_myLocationBackgroundMarginLeft" format="dimension"/>
        <attr name="mapcat_myLocationBackgroundMarginTop" format="dimension"/>
        <attr name="mapcat_myLocationBackgroundMarginRight" format="dimension"/>
        <attr name="mapcat_myLocationBackgroundMarginBottom" format="dimension"/>
        <attr name="mapcat_myLocationAccuracyTintColor" format="color"/>
        <attr name="mapcat_myLocationAccuracyAlpha" format="integer"/>
        <attr name="mapcat_myLocationAccuracyThreshold" format="float"/>

        <!--Compass-->
        <attr name="mapcat_uiCompass" format="boolean"/>
        <attr name="mapcat_uiCompassGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="mapcat_uiCompassMarginLeft" format="dimension"/>
        <attr name="mapcat_uiCompassMarginTop" format="dimension"/>
        <attr name="mapcat_uiCompassMarginRight" format="dimension"/>
        <attr name="mapcat_uiCompassMarginBottom" format="dimension"/>
        <attr name="mapcat_uiCompassFadeFacingNorth" format="boolean"/>
        <attr name="mapcat_uiCompassDrawable" format="reference"/>

        <!--Logo-->
        <attr name="mapcat_uiLogo" format="boolean"/>
        <attr name="mapcat_uiLogoGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="mapcat_uiLogoMarginLeft" format="dimension"/>
        <attr name="mapcat_uiLogoMarginTop" format="dimension"/>
        <attr name="mapcat_uiLogoMarginRight" format="dimension"/>
        <attr name="mapcat_uiLogoMarginBottom" format="dimension"/>

        <!--Attribution-->
        <attr name="mapcat_uiAttribution" format="boolean"/>
        <attr name="mapcat_uiAttributionGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="mapcat_uiAttributionMarginLeft" format="dimension"/>
        <attr name="mapcat_uiAttributionMarginTop" format="dimension"/>
        <attr name="mapcat_uiAttributionMarginRight" format="dimension"/>
        <attr name="mapcat_uiAttributionMarginBottom" format="dimension"/>
        <attr name="mapcat_uiAttributionTintColor" format="color"/>

        <!-- Use TextureView-->
        <attr name="mapcat_renderTextureMode" format="boolean"/>

        <attr name="mapcat_enableTilePrefetch" format="boolean"/>
        <attr name="mapcat_enableZMediaOverlay" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="mapcat_BubbleLayout">
        <attr name="mapcat_bl_arrowWidth" format="dimension|reference"/>
        <attr name="mapcat_bl_cornersRadius" format="dimension|reference"/>
        <attr name="mapcat_bl_arrowHeight" format="dimension|reference"/>
        <attr name="mapcat_bl_arrowPosition" format="dimension|reference"/>
        <attr name="mapcat_bl_bubbleColor" format="color|reference"/>
        <attr name="mapcat_bl_strokeWidth" format="dimension|reference"/>
        <attr name="mapcat_bl_strokeColor" format="color|reference"/>

        <attr name="mapcat_bl_arrowDirection" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>
</resources>
